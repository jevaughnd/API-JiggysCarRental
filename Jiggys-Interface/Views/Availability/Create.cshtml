@model Jiggys_Interface.Models.ViewModels.AvailabilityVM

@{
    ViewData["Title"] = "Create";
}

<partial name="_Dashboard" />
<center> <h3>Create Availability</h3> </center>


<hr />


<div class="container row-cols-md-3  d-flex justify-content-center align-items-center ">

    <form asp-action="Create" class="Razor-Form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    

        <div class="form-group">
            <label asp-for="VehicleId" class="control-label"></label>
            <select asp-for="SelectedVehicleId" class="form-control" asp-items="@Model.VehicleList">
                <option disabled selected> -- Select Vehicle -- </option>
            </select>
            <span asp-validation-for="SelectedVehicleId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AvailabilityDate" class="control-label"></label>
            <input asp-for="AvailabilityDate" class="form-control" />
            <span asp-validation-for="AvailabilityDate" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>




</div> <!------------>

<h6>VehicleIds and availability Ids Have to match</h6>






<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
